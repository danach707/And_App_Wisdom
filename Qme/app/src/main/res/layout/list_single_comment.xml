<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">

    <TableRow>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="right">
            <!--<ImageView-->
                <!--android:id="@+id/comm_img"-->
                <!--android:layout_width="55dp"-->
                <!--android:layout_height="55dp"-->
                <!--android:layout_column="0" />-->

            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="70dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="left">

                <ImageView
                    android:id="@+id/comm_list_yes_image"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:src="@drawable/like" />

                <TextView
                    android:id="@+id/comm_list_yes_counter"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:layout_column="2"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="right">
                <ImageView
                    android:id="@+id/comm_list_no_image"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:layout_column="3"
                    android:src="@drawable/dislike" />

                <TextView
                    android:id="@+id/comm_list_no_counter"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:layout_column="4"
                    android:textDirection="rtl"
                    android:text="0" />
            </LinearLayout>


            <TextView
                android:id="@+id/comm_txt"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:gravity="right"
                android:layout_weight="5"
                android:textDirection="rtl"
                android:layout_column="15"
                android:longClickable="true"/>
        </LinearLayout>


    </TableRow>

</TableLayout>